<div class="container">
  <header>
    <h1 class="top-content">Welcome To <a href="/"><img id="hearthstone-logo" src="img/HearthstoneLogo.png"></a> Card
      API</h1>
  </header>
  <p id="sub-title">Search For Card By Name! (Case Sensitive):</p>
  <form autocomplete="off" spellcheck="false">
    <input class="input-field" name="name" id="search-input">
    <button class="search-button" type="button" id="searchBtn" style="animation-delay:0.07s">Search</button>
  </form>
  <p id="sub-title">View Cards By Class:</p>
  <div class="heroes">
    {{#each classes}}
    <a href="/class/{{{name}}}" class="text-links">{{name}}</a>
    {{/each}}
  </div>
</div>
<div class="container" id="card-container"></div>